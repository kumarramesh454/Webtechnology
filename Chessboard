...............................CHESSBOARD.CSS..............................

table.chessboard {
    border-collapse: collapse;
    
}

table.chessboard :is(td,th) {
    width: 2em;
    height: 2em;
    text-align: center;
    vertical-align: middle;
}

table.chessboard th{
    font-weight: normal;
}

table.chessboard > tbody > tr:first-child{
    border-top: medium solid black;
}

table.chessboard > tbody > tr:last-child{
    border-bottom: medium solid black;
}

table.chessboard > tbody > tr > td:first-of-type{
    border-left: medium solid black;
}

table.chessboard > tbody > tr > td:last-of-type{
    border-right: medium solid black;
}

table.chessboard > tbody > tr:nth-child(odd) > td:nth-last-of-type(even){
    background-color: lightgray;
}

table.chessboard > tbody > tr:nth-child(odd) > td:nth-last-of-type(odd){
    background-color: aliceblue;
}

table.chessboard > tbody > tr:nth-child(even) > td:nth-last-of-type(odd){
    background-color: lightgray;
}

table.chessboard > tbody > tr:nth-child(even) > td:nth-last-of-type(even){
    background-color: aliceblue;
}

